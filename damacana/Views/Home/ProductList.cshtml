@using damacana.Models;
@model List<damacana.DAL.Models.Product>
@{
    ViewBag.Title = "ProductList";
}

<body style="background-image: url(http://img0.mxstatic.com/wallpapers/e10be71dcff8d56497a3d30561b6e301_large.jpeg)">
    <table style="width:50%">
       
    </table>
    
    <h2 style="color:white">ProductList</h2>
    @foreach (var item in Model)
    {
        <table style="width:50%">

            <tr>
                <td>
                    <div class="media">
                        <div class="media-left">
                            <a href="#">
                               
                                <img class="media-object" data-src="holder.js/64x64" alt="64x64" src="http://www.objektifhaber.com/resimler/58000/58829_3.jpg" data-holder-rendered="true" style="width: 145px; height: 110px;">
                            </a>

                        </div>
                    </div>

                </td>

                <td>
                    <div class="alert alert-success" role="alert">
                        <h4 class="media-heading">@item.Name</h4>
                        <b>@item.Price TL</b>
                    </div>
                </td>
                <td>

                    <a class="btn btn-success" href="@Url.Action("AddtoCart", new {name = item.Name})"><b>Sepete Ekle</b></a>
                    <a class="btn btn-success" href="@Url.Action("EditProduct", new {name = item.Name}))"><b>Edit</b></a>
                    <a class="btn btn-success" href="@Url.Action("DeleteProduct", new {name = item.Name}))"><b>Delete</b></a>
                </td>


            </tr>
        </table>
    }
    <hr />
    <table>

        <tr>
            <td>
                <a class="btn btn-success" href="@Url.Action("AddProduct")"><b>Yeni Ürin Ekle</b></a>
                <a class="btn btn-success" href="@Url.Action("CartList")"><b>Cart Listi Gör </b></a>


            </td>
        </tr>
    </table>
    <hr />
</body>