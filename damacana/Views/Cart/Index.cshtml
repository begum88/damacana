@model IEnumerable<damacana.DAL.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Sepetim</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
        </tr>
    }

</table>

<div class="row">
    <div class="col-md-12">
        <a href="@Url.Action("CompletePurchese", "Cart")" class="btn btn-primary">Alışverişi Tamamla</a>
    </div>
</div>
