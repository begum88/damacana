@model List<damacana.DAL.Models.PurchasedProducts>

@{
    ViewBag.Title = "Details";
}

@if (Model != null)
{
    <h2>@Model[0].Purchase.CreateDate.ToString("dd.MM.yyyy HH:mm:ss") tarihli @Model[0].Purchase.TotalPrice TL lik sipariş detayları </h2>
}


<div>
    <h4>Purchase</h4>
	<hr />
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Price)
                </td>
            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
